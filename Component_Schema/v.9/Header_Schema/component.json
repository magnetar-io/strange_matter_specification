{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Component",
  "version": "0.91",
  "date": "2025-09-30",
  "description": "Schema for Strange Matter Component specification defining the structure and metadata for components in the Strange Matter ecosystem",
  "type": "object",
  "properties": {
    "ComponentType": {
      "type": "string",
      "pattern": ""
    },
    "ComponentInfo": {
      "type": "object",
      "properties": {
        "version": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "author": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "sourceurl": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "publishdate": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "required": ["version", "author", "sourceurl", "publishdate"]
    },
    "DataAuthorIdentifier": {
      "type": "string",
      "format": "email"
    },
    "Context": {
      "type": "string",
      "format": "uri",
      "pattern": "^.+\\?.*$"
    },
    "GraphSequenceNumber": {
      "type": "integer"
    },
    "UsedAsA": {
      "type": "string",
      "enum": [
        "Instance",
        "Typical",
        "Archetype",
        "Relationship",
        "Group",
        "Collection"
      ]
    },
    "Extends": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "ACT",
          "TPC",
          "INT",
          "ENT",
          "COM",
          "VER"
        ],
        "pattern": ""
      }
    },
    "Action": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "string",
            "pattern": ""
          },
          {
            "type": "object",
            "properties": {
              "action": {
                "type": "string",
                "pattern": ""
              },
              "assignment": {
                "type": "string"
              },
              "dueDate": {
                "type": "string",
                "format": "date-time"
              }
            },
            "required": ["action"]
          }
        ]
      }
    },
    "EntityGUID": {
      "type": "string",
      "pattern": ""
    },
    "ComponentGUID": {
      "type": "string",
      "pattern": ""
    },
    "ComponentVersionGUID": {
      "type": "string",
      "pattern": ""
    },
    "ForeignIDs": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "DateCreated": {
      "type": "string",
      "format": "date-time"
    },
    "LastModified": {
      "type": "string",
      "format": "date-time"
    },
    "Name": {
      "type": "string"
    },
    "HashDefinition": {
      "type": "string",
      "enum": ["MD5"]
    },
    "PayloadHash": {
      "type": "string",
      "pattern": ""
    },
    "PayloadDataType": {
      "type": "string",
      "enum": ["json", "geojson"]
    },
    "PayloadSchemaFormat": {
      "type": "string",
      "enum": ["json-schema", "typescript", "openapi", "graphql", "protobuf", "avro", "other"]
    },
    "PayloadSchema": {
      "oneOf": [
        {
          "type": "string",
          "format": "uri"
        },
        {
          "type": "object"
        },
        {
          "type": "string"
        }
      ]
    },
    "Payload": {
      "type": ["array", "null"],
      "items": { "type": "object" }
    }
  },
  "required": [
    "ComponentType",
    "ComponentInfo",
    "AuthorIdentifier",
    "Context",
    "GraphSequenceNumber",
    "UsedAsA",
    "ComponentClassification",
    "EntityGUID",
    "ComponentGUID",
    "ComponentVersionGUID",
    "ForeignIDs",
    "DateCreated",
    "LastModified",
    "HashDefinition",
    "PayloadHash",
    "PayloadDataType",
    "PayloadSchemaFormat"
  ]
}
