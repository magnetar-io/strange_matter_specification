{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Component Schema",
    "description": "Schema for describing component data",
    "version": "version.01",
    "definitions": {
      "UUID7": {
        "type": "string",
        "pattern": "^[0-9A-Fa-f]{14}$"
      },
      "DateTime": {
        "type": "string",
        "format": "date-time"
      }
    },
    "type": "object",
    "properties": {
      "component_type": { "type": "string" },
      "component_type_reference": { "type": "string", "format": "uri" },
      "component_type_guid": { "$ref": "#/definitions/UUID7" },
      "component_type_version_guid": { "$ref": "#/definitions/UUID7" },
      "component_version": { "type": "string" },
      "component_hash": { "type": "string" },
      "author": { "type": "string" },
      "author_identifier": { "type": "string" },
      "context": { "type": "string" },
      "source_data": { "type": "string", "format": "uri" },
      "source_data_file_date": { "$ref": "#/definitions/DateTime" },
      "source_data_file_id": { "type": "string" },
      "source_data_file_version_id": { "type": "string" },
      "source_data_item_id": { "type": "string" },
      "source_data_item_version_id": { "type": "string" },
      "source_data_other": { "type": "string" },
      "entity_guid": { "$ref": "#/definitions/UUID7" },
      "version": { "type": "string" },
      "version_guid": { "$ref": "#/definitions/UUID7" },
      "version_increment": { "type": "string" },
      "date_created": { "$ref": "#/definitions/DateTime" },
      "name": { "type": "string" },
      "classification_value": { "type": "string" },
      "sequence_name": { "type": "string" },
      "sequence_guid": { "$ref": "#/definitions/UUID7" },
      "sequence_value": { "type": "integer" },
      "option": { "type": "string" },
      "phase": { "type": "string" },
      "status": { "type": "string" },
      "active": { "type": "string" },
      "component_responses": { "type": "array", "items": { "type": "object" } },
      "payload_hash": { "type": "string" },
      "hash_definition": { "type": "string" },
      "payload_data_type": { "type": "string" },
      "payload_data_type_definition": { "type": "string" },
      "payload_encoding": { "type": "string" },
      "payload_encryption": { "type": "string" },
      "payload": { "type": "array", "items": { "type": "string" } },
      "source_entities": { "type": "array", "items": { "type": "string" } },
      "source_components": { "type": "array", "items": { "type": "object" } },
      "source_component_type": { "type": "array", "items": { "type": "string" } },
      "source_component_classification": { "type": "array", "items": { "type": "string" } },
      "destination_entities": { "type": "array", "items": { "type": "string" } },
      "destination_components": { "type": "array", "items": { "type": "object" } },
      "destination_component_type": { "type": "array", "items": { "type": "string" } },
      "destination_classfication": { "type": "array", "items": { "type": "string" } }
    }
  }
  