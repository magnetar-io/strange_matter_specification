{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "StrangeMatter glTF Payload",
    "description": "A schema for representing relationships with embedded glTF JSON data and optional .bin data as either a URI or base64-encoded text",
    "version": "0.0.1",
    "hash": {"type": "string"},
    "dateCreated": "2023-12-19",
    "type": "object",
    "properties": {
      "gltf": {
        "type": "object",
        "properties": {
          "gltf_json": {
            "type": "object",
            "description": "Embedded glTF JSON data"
            // Specify glTF JSON structure here if needed
          },
          "bin_uri": {
            "type": "string",
            "format": "uri",
            "description": "URI to the .bin file associated with the glTF model"
          },
          "bin_data": {
            "type": "string",
            "contentEncoding": "base64",
            "description": "Base64-encoded binary data of the .bin file"
          }
        },
        "required": ["gltf_json"],
        "oneOf": [
          {"required": ["bin_uri"]},
          {"required": ["bin_data"]}
        ]
      }
    },
    "required": ["gltf"]
  }
  